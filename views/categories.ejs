<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/d667353117.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <title>Thể loại</title>
</head>

<body>
    <div class="app">
        <%- include('navigator')%>
            <div class="container">
                <div class="container">
                 
                    <!-- products list -->
                    <div>
                        <table class="table caption-top table-bordered">
                            <div class="table-caption row">
                                <h3 class="fw-semibold col-11">Danh sách sản phẩm</h3>
                                <!-- Button to open modal -->
                                <!-- <div class="col align-middle">
                                    <i class="fa-solid fa-circle-plus fa-2xl" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@mdo" style="color: #1152fd;"></i>
                                </div> -->
                            </div>
                            <thead class="table-dark">
                                <tr>
                                    <th class="text-center align-middle" scope="col">#</th>
                                    <th class="text-center align-middle" scope="col">Tên loại</th>
                                    <th class="text-center align-middle" scope="col">Số lượng SP</th>
                                    <th class="text-center align-middle" scope="col">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%listCategories.forEach((category, index)=>{ %>
                                    <tr>
                                        <th class="text-center align-middle" scope="row">
                                            <%= (index + 1) %>
                                        </th>
                                        <td class="text-center align-middle"><a href="/categories/<%= category._id %>"
                                                style="text-decoration: none; color: black;">
                                                <%= category.name %>
                                            </a></td>

                                        <% if (category.img) { %>
                                            <td class="text-center align-middle">
                                                <p>Product Image</p>
                                            </td>
                                        <% } else { %>
                                            <td class="text-center align-middle">N/A</td>
                                            <% } %>

                                        <td
                                            class="text-center align-middle">
                                            <a href="/products/categories">
                                                <i class="fa-solid fa-pen-to-square fa-lg mx-1" style="color: #1152fd;"></i>
                                            </a>
                                            <a href="/products/categories/"
                                                onclick="return confirm('Are you sure?')">
                                                <i class="fa-solid fa-trash-can fa-lg mx-1" style="color: #ff0000;"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    <% });%>
                            </tbody>
                        </table>
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-center">
                                <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                                <li class="page-item"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
</body>

</html>